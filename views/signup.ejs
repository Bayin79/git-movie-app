<!DOCTYPE html>
<html >
<head>
    <title>Document</title>
    <link rel="stylesheet" href="../public/signup.css">
</head>
<body>
    
    <div class="main">
        <div class="info"> SIGN UP
            
        </div>
        <div class="top">
            <img src="../image/usericon.png" alt="userimage">
            
        </div>   
        <div class="bot">
            <form  method="post">
                <input type="text" name="username" placeholder="USERNAME" required>
                <input type="text" name="email" placeholder="EMAIL" required >
                <input type="password" name="password" placeholder="PASSWORD" required>
                <br>
                <input class="sub" type="submit" value= "REGISTER">
            </form>

            



           <% if (msg.length){ %>
            
            <div class="err">

            <ul class="msg">
                <% msg.forEach(err=>{ %>

            <li> <%= err.msg %></li>

                <% }) %>

            </ul>

             <% } %>
            
            <p class="inuse"> 
             <% if (inuse.length){ %>
             <%= inuse %>
             <% } %>
             </p>
             
             <p class="inuse">
                <% if (err.length){ %>

                    <%= err %>

                <% } %>
             </p>

            </div>     

        </div>
    </div>
</body>
</html> 